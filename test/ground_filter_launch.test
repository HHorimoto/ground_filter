<!-- Launch file for Ground Filter with Test-->
<launch>
	<arg name="is_test" default="true" />
	<arg name="bag_name" default="rosbag" />
	<arg name="bag_path" default="$(find ground_filter)/bags/$(arg bag_name).bag" />
	<arg name="config_name" default="topics_config" />
	<arg name="config_path" default="$(find ground_filter)/config/$(arg config_name).yaml" />

	<include file="$(find ground_filter)/launch/ground_filter.launch" />

	<node pkg="rosbag" type="play" name="player" args="--clock $(arg bag_path)" />
	<test name="publishtest" test-name="publishtest" pkg="rostest" type="publishtest">
		<rosparam command="load" file="$(arg config_path)" />
	</test>

</launch>
